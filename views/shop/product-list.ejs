<%- include('../layouts/head') %>  
    <link rel="stylesheet" href="/css/product-list.css">
</head>
<body>
  <%- include('../layouts/navigation.ejs')%>
    <main>
    <% if(title.length > 0) { %>
        <% for(let product of title){ %>
        <div class="main">
            <div class="card">
                <div class="headerCard">
                    <p><%= product.title %></p>
                </div>
                <div class="mainCard">
                    <img src="<%= product.link %>" alt="some image">
                </div>
                <div class="footerCard">
                    <p>
                        <%= product.description %>
                    </p>
                </div>
                <div>
                    <a href="/product/<%= product.id %>"> <button class="button">Details</button> </a> 
                    <form action="/cart" method="POST">
                        <button class="button">Add to Cart</button>
                        <input type="hidden" name="productId" value="<%= product.id %>" >
                    </form>
                </div>
            </div>
        </div>  
        <% } %>    
    <% } else { %>
        <p> No Products yet</p>
    <% } %>    
    </main>
</body>
</html>