<%- include('../layouts/head') %>  
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <%- include('../layouts/navigation.ejs')%>
    <main >
    <% if(title.length > 0) { %>
        <% for(let product of title){ %>
          <div class="main">
            <div class="card">
                <div class="headerCard">
                    <p><%= product.title %></p>
                </div>
                <div class="mainCard">
                    <img src="<%= product.link %>" alt="some image">
                </div>
                <div class="footer">
                    <p>$<%= product.price %></p>
                    <p>
                        <%= product.description %>
                    </p>
                </div>
                <div >
                    <a href="/admin/edit-product"> <button class="button">Edit</button> </a> 
                    <form action="/add-to-cart" method="POST">
                     <button class="button">Delete</button>
                    </form>
                </div>
            </div>
        </div>    
        <% } %>    
    <% } else { %>
        <p> No Products yet</p>
    <% } %>    
    </main>
</body>
</html>
